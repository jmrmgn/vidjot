{{#each ideas}}
   <div class="card card-body mb-2">
      <h4>{{title}}</h4>
      <p>{{details}}</p>
      <a href="/ideas/edit/{{id}}" class="btn btn-secondary">Edit</a>
      <form action="/ideas/{{id}}?_method=DELETE" method="POST">
         <input type="hidden" name="_method" value="DELETE">
         <input type="submit" class="btn btn-danger btn-block mt-2" value="Delete">
      </form>
   </div>
{{else}}
   <p>No video ideas listed.</p>
{{/each}}